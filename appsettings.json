{
  // "Logging": {
  //   "LogLevel": {
  //     "Default": "Information",
  //     "Microsoft.AspNetCore": "Warning"
  //   }
  // },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[ServiceName: {ServiceName}] [{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] [RequestId: {RequestId}] [TraceId: {TraceId}] [SpanId: {SpanId}] [ParentSpanId: {ParentSpanId}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/TheTicketShopLog-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[ServiceName: {ServiceName}] [{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] [RequestId: {RequestId}] [TraceId: {TraceId}] [SpanId: {SpanId}] [ParentSpanId: {ParentSpanId}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "Grpc": {
    "Inventory": {
      "Address": "https://localhost:5001"
    }
  }
}
